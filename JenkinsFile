
pipeline {
   agent any 
   stages{
     stage('Git checkout') {
     steps{
            git branch: 'main', credentialsId: 'github-cred', url: 'https://github.com/demodevops2/devopscls25repo.git'
            }
     
     }

     stage('Build stage'){
       steps {
          sh '  mvn clean package ' 
       }
     
     }

     stage('Deploy to Tomcat'){ 
     
        steps {   
       sshagent(['tomcat-ec2-id']) { 
          sh 'mv target/*.war webapp'
          sh 'scp -o StrictHostKeyChecking=no target/webapp ubuntu@172.31.43.104:/var/lib/tomcat8/webapps/' 
       } 
       }
    } 



   
   }
  }
